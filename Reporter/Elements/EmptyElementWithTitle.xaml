<rep:ReportElement x:Class="Reporter.Elements.EmptyElementWithTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:rep="clr-namespace:Reporter.Elements"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <rep:ReportElement.Resources>
        <rep:IsStringNullOrEmptyToVisibilityConverter x:Key="IsStringNullOrEmptyToVisibilityConverter"/>
    </rep:ReportElement.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ContentControl Content="{Binding TopElementContent}" Grid.Row="0"/>
        <TextBlock Text="{Binding Title}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="{Binding TitleHorizontalAlignment}"
                   Visibility="{Binding Title, Converter={StaticResource IsStringNullOrEmptyToVisibilityConverter}}"  Grid.Row="1"/>
        <ContentControl Content="{Binding ElementContent}" Grid.Row="2"/>
    </Grid>
</rep:ReportElement>
