<rep:ReportElement x:Class="Reporter.Elements.TextHeaderElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:rep="clr-namespace:Reporter.Elements"
             mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="300" d:DesignWidth="300" BorderBrush="Black">
    <Grid>
        <TextBlock Text="{Binding Title1}" FontWeight="{Binding FontWeight}" VerticalAlignment="Center" HorizontalAlignment="{Binding Title1HorizontalAlignment}"/>
        <TextBlock Text="{Binding Title2}" FontWeight="{Binding FontWeight}" VerticalAlignment="Center" HorizontalAlignment="{Binding Title2HorizontalAlignment}"/>
    </Grid>
</rep:ReportElement>
