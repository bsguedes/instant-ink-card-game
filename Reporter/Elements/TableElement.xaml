<rep:ReportElement x:Class="Reporter.Elements.TableElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             xmlns:rep="clr-namespace:Reporter.Elements">
    <rep:ReportElement.Resources>
        <rep:IsStringNullOrEmptyToVisibilityConverter x:Key="IsStringNullOrEmptyToVisibilityConverter"/>
    </rep:ReportElement.Resources>
    <Grid>        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>            
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="{Binding Title}" Visibility="{Binding Title, Converter={StaticResource IsStringNullOrEmptyToVisibilityConverter}}" 
                   FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="{Binding TitleAlignment}"/>
        
        <ContentControl Content="{Binding TableGrid}" Grid.Row="1"/>
        
    </Grid>    
</rep:ReportElement>
